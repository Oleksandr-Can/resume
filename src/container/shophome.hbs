    <hr />

    <div class='pb-2'>
      {{#with newsBlock}}
        <h2 class='m-3 text-center'>{{title}}</h2>
        <div class='row g-2'>

          {{>shoppost }}
         
        </div>
      {{/with}}
    </div>
    <hr />

    <div class='p-2'>

      {{#with goodsBlock}}
        <div class='nav nav-tabs mb-5'>
          {{#each tabs}}
            <div class='nav-item'>
              {{#if isActive}}
                <a
                  href='#'
                  class='nav-link active'
                >{{text}}</a>
              {{else}}
                {{#if isDisabled}}
                  <a
                    href='#'
                    class='nav-link disabled'
                  >{{text}}</a>

                {{else}}
                  <a href='#' class='nav-link'>{{text}}</a>
                {{/if}}
              {{/if}}

            </div>
          {{/each}}
        </div>
        <div class='row g-2'>
          {{#each cards}}
            <div class='col-4'>
              <div class='card'>
                <img
                  class='card-img-top'
                  src='{{image}}'
                  alt='Product photo {{title}}'
                />
                <div class='card-body'>
                  <b class='card-title p-0'>
                    {{title}}
                    {{#if isHot}}
                      <span
                        class='badge text-bg-warning rounded-pill ms-2'
                      >
                        HOT!
                      </span>
                    {{/if}}
                    {{#if isNew}}
                      <span
                        class='badge text-bg-primary rounded-pill ms-2'
                      >
                        NEW
                      </span>
                    {{/if}}
                  </b>
                  <p class='mt-5'>{{description}}</p>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      {{/with}}

    </div>
    <hr class='ms-0 pb-4' />

    <div class='card text-bg-dark'>
      <div class='card-body'>
        {{#with subscribe}}
          <h2>
            {{header}}
          </h2>
          <p>{{description}}</p>

          {{#each buttons}}
            <div class='ms-0 mb-2'>
              <a
                href='{{link}}'
                class='btn btn-primary'
              >{{text}}</a>
            </div>
          {{/each}}
        {{/with}}
      </div>
    </div>
    <hr class='ms-0 pb-4' />

    <div class='card text-bg-success'>
      <div class='card-body'>
        {{#with service}}
          <h2 class='text-center'>
            {{title}}
          </h2>
          <p class='text-center'>{{description}}</p>
          {{#each buttons}}
            <div class='ms-0 mb-2 text-center'>
              <a
                href='{{link}}'
                class='btn btn-primary'
              >{{text}}</a>
            </div>
          {{/each}}
        {{/with}}
      </div>
    </div>
    <hr class='ms-0 pb-4' />



  </div>
</main>