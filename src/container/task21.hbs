<main>
  {{#with heading}}
    <section>
      <div class='card'>
        <div class='card-body'>
          {{#with main}}
            <h1>{{title}}</h1>
            <br />
            <p>{{text}}</p>
            {{#with button_text}}
              <button
                class='btn btn-primary'
              >{{solid}}</button>
              <br />
              <br />
              <br />
              <button
                class='btn btn-outline-primary'
              >{{outline}}</button>
            {{/with}}
          {{/with}}
        </div>
      </div>
    </section>

    <section>
      <div class='card'>
        <div class='card-body'>
          {{#with second}}
            <h2>{{title}}</h2>
            <br />
            <p>{{text}}</p>
            {{#with button_text}}
              <button
                class='btn btn-secondary'
              >{{solid}}</button>
              <br />
              <br />
              <br />
              <button
                class='btn btn-outline-secondary'
              >{{outline}}</button>
            {{/with}}
          {{/with}}
        </div>
      </div>
    </section>

    <section>
      <div class='card'>
        <div class='card-body'>
          {{#with subblock}}
            <h3>{{title}}</h3>
            <br />
            <p>{{text}}</p>
            {{#with button_text}}
              <button
                class='btn btn-dark'
              >{{solid}}</button>
              <br />
              <br />
              <br />
              <button
                class='btn btn-outline-dark'
              >{{outline}}</button>
            {{/with}}
          {{/with}}
        </div>
      </div>
    </section>
  {{/with}}
  <hr />

  <section>
    {{#with nested_display}}
      <div class='card'>
        <div class='card-body'>
          <div class='display-1'>{{title}}</div>
          <div class='card'>
            <div class='card-body'>
              {{#with children_display}}
                <div class='display-4'>{{title}}</div>
                <br />
                <p>{{text}}</p>
                <button
                  class='btn btn-outline-warning'
                >{{button.text}}</button>
              {{/with}}
            </div>
          </div>
          <br />
          <h6>{{header_text}}</h6>
          <br />
          <br />
          <button
            class='btn btn-info'
          >{{button.text}}</button>
        </div>
      </div>
    {{/with}}
  </section>
  <br />

  <section>
    {{#with paragraph}}
      <p class='text-uppercase'>{{title}}</p>
      <p class='text-lowercase'>{{text}}</p>
      <form action='{{button.url}}' target='_blank'>
        <button
          class='btn btn-link'
        >{{button.text}}</button>
      </form>
      <div class='card'>
        <div class-card-body>
          <ul>
            {{#each list_name}}
              <li>
                <form action='{{url}}' target='_blank'>
                  <button
                    class='btn btn-link'
                  >{{text}}</button>
                </form>
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
    {{/with}}
  </section>
</main>