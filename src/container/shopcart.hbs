                  class='btn btn-outline-danger fs-6'
                >{{text}}</button>
              {{/if}}
            {{/each}}
          </div>
        </div>
      </div> --}}
    {{/each}}
  </div>
  <div class='py-4'><hr /></div>

  {{! *****total**** }}
  <div>
    {{#with total}}
      <div>
        <h3>{{title}}</h3>
      </div>
      <div><h2>{{amount}}</h2></div>
      <div>{{delivery}}</div>
      <div>
        {{#each buttons}}
          <div class='pt-3 pb-1'>
            {{#if isSuccess}}
              <a
                href='{{link}}'
                class='btn btn-success'
              >{{text}}</a>
            {{/if}}
          </div>
          {{#if isOutline}}
            <a
              href='{{link}}'
              class='btn btn-outline-success'
            >{{text}}</a>
          {{/if}}
        {{/each}}
      </div>
    {{/with}}
  </div>
  <div class='py-4'><hr /></div>

    {{!-- *****goodsOtherBlock**** --}}
  <div>
    {{#with goodsOtherBlock}}
        <div class="text-center pb-5">
            <h3>{{title}}</h3>
        </div>        
        <div class='row g-2'>
            {{> shopcard}}
        </div>
    {{/with}}
  </div>
  <div class='py-4'><hr /></div>

    {{!-- *****subscribe***** --}}
  <div>
    {{> shopsubscribe}}
  </div>
  <div class='pt-4'><hr /></div>

</main>