<main class='ps-5 mb-5'>
  {{! *****Header***** }}  
  <div class='pb-5 pt-5'>
    {{#with header}}
      <h1 class='pb-3'>{{title}}</h1>
      {{#with button}}
        <a
          href='{{link}}'
          class='btn btn-outline-dark'
        >{{text}}</a>
      {{/with}}
    {{/with}}

  </div>
  <div class='py-4'><hr /></div>

  {{! *****goodsBlock**** }}
  <div>
    {{#each goodsBlock}}
    {{> cartGoodsItem}}
      {{!-- <div class='card pb-2 mt-2'>
        <div class='row'>
