            <p><h6>{{name}}</h6></p>
            <p>{{description}}</p>
          </div>
          <div class='col-2 pt-2'>
            <br />
            {{#with price}}
              <p>{{title}}:</p>
              <h5>{{value}}</h5>
            {{/with}}
          </div>
          <div class='col-2 pt-2'>
            <br />
            <br />
            <h5>{{amount}}</h5>
          </div>
          <div class='col-2 pt-2 ms-0'>
            {{#each buttons}}
              <div class='pt-3 pb-1'>
                {{#if isPrimary}}
                  <button
                    class='btn btn-primary'
                  >{{text}}</button>
                {{/if}}
              </div>
              {{#if isDanger}}
