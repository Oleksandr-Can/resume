<main class='p-5'>

  <div class='mb-5 card'>
    {{#with navigation}}
      <div class='nav'>
        {{#each links}}
          <div class='nav-item'>
            <a href='{{href}}' class='nav-link'>{{text}}</a>
          </div>
        {{/each}}
        <a
          href='{{href}}'
          class='nav-link disabled'
        >Disabled</a>
      </div>
    {{/with}}
  </div>
  <hr />

   <div class="breadcrumb">
        <div class='nav'>            
            {{#each breadcrumb}} 
            <div class="breadcrumb-item">      
                <div class='nav-item'>             
                    {{#unless url }}
                        <a href='{{url}}' class='nav-link disabled'>{{name}}</a>
                    {{else}}
                        <a href='{{url}}' class='nav-link'>{{name}}</a>
                    {{/unless}}             
                </div>
            </div>          
            {{/each}}            
        </div>
    </div> 

   

    <div class="row mb-5">
        {{#with productData}}
            <div class="col-6">
                <div class='card mb-4' >                
                    <img class='card-img-top'
                    src='{{img}}'
                    alt='Product photo {{title}}'/>
                </div>
                <div class='card mt-3 mb-2'>
                    <div class="card-body m-0 p-0">
                        {{#with info}}
                        <div class="p-2 mt-0"> 
                            <h5 class="card-title">
                            {{title}}
                            </h5>
                            <p class="card-text">{{about}}</p>
                            <h3>
                            {{price}}
                            </h3>
                            <br>
                        </div>
                            <div class="mb-4 mt-0">
                            {{#each category}}
                                {{#if isHot}}
                                    <span
                                        class='badge text-bg-warning rounded-pill ms-2'
                                    >
                                        {{name}}
                                    </span>
                                    {{/if}}
                                    {{#if isNew}}
                                    <span
                                        class='badge text-bg-primary rounded-pill ms-2'
                                    >
                                        {{name}}
                                    </span>
                                    {{/if}}
                                    {{#if isBonus}}
                                    <span
                                        class='badge text-bg-info rounded-pill ms-2'
                                    >
                                        {{name}}
                                    </span>
                                    {{/if}}
                            {{/each}}
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>

            <div class="col-1"></div>

            <div class=" col-5 "> 

                {{#with item}}
                    <table class="table " border="1px">
                        <thead>
                            <tr>
                                {{#each head}}
                                <th>{{this}}</th>
                                {{/each}}
                            </tr>
                        </thead>

                        <tbody>                             
                            {{#each body}}
                            <tr>  
                                {{#each this}} 
                                    {{#if @first}}               
                                        <td><b>{{this}}</b></td>
                                        {{else}}
                                        <td>{{this}}</td>
                                    {{/if}}
                                {{/each}} 
                            </tr>                     
                            {{/each}}                    
                        </tbody>
                    </table>
                {{/with}}

                <div>
                    {{#with param}}
                    <div class="card">
                    <ul class="list-group">
                        <div class="card-header">{{title}}</div>
                        {{#each list}}
                        <li class="list-group-item">{{this}}</li>
                        {{/each}}
                    </ul>
                    </div>
                    {{/with}}
                </div> 

                <div class="pt-1 mt=0">
                    {{#with alert}}
                    <div class='alert alert-danger'>
                        {{#if isError}}
                            <span class='f_word'>
                                {{text}}                            
                            </span>
                        {{/if}}
                    </div>
                    {{/with}}
                </div>         
            </div>    
            

            <div class="card">
                <div class="card-body">
                {{#each actionList}}
                    {{#if isWarning}}
                    <button class="btn btn-warning me-3">{{name}}</button>
                    {{/if}}
                    {{#if isError}}
                    <button class="btn btn-outline-danger me-3">{{name}}</button>
                    {{/if}}
                    {{#if isSuccess}}
                    <button class="btn btn-success me-3">{{name}}</button>
                    {{/if}}
                    {{#if isGood}}
                    <button class="btn btn-outline-success me-3">{{name}}</button>
                    {{/if}}
                {{/each}}
                </div>
            </div>

        {{/with}}
    </div>

    <div>
        {{#with goodsOtherBlock}}        
            <div class='row g-2'>
                {{#each cards}}
                <div class='col-4'>
                    <div class='card'>
                        <img
                            class='card-img-top'
                            src='{{image}}'
                            alt='Product photo {{title}}'                />
                        <div class='card-body'>
                            <b class='card-title p-0'>
                            {{title}}
                            {{#if isHot}}
                                <span
                                class='badge text-bg-warning rounded-pill ms-2'
                                >
                                HOT!
                                </span>
                            {{/if}}
                            {{#if isNew}}
                                <span
                                class='badge text-bg-primary rounded-pill ms-2'
                                >
                                NEW
                                </span>
                            {{/if}}
                            </b>
                            <p class='mt-5'>{{description}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        {{/with}}
    </div>

    <div class='card text-bg-success mt-5'>
      <div class='card-body'>
        {{#with service}}
          <h2 class='text-center'>
            {{title}}
          </h2>
          <p class='text-center'>{{description}}</p>
          {{#each buttons}}
            <div class='ms-0 mb-2 text-center'>
              <a
                href='{{link}}'
                class='btn btn-primary'
              >{{text}}</a>
            </div>
          {{/each}}
        {{/with}}
      </div>
    </div> 

    <div class="row mt-5">
        {{#each footer}}
        <div class='col-2 ms-0'>
          <div class='nav p-0 m-0'>
            {{#each this}}
              {{#if @last}}
                <p class='nav-item m-0 p-0'>
                  <a
                    href='{{link}}'
                    class='nav-link disabled'
                  >{{text}}</a>
                </p>
              {{else}}
                <p class='nav-item m-0 p-0'>
                  <a
                    href='{{link}}'
                    class='nav-link'
                  >{{text}}</a>
                </p>
              {{/if}}
            {{/each}}
          </div>
        </div>
      {{/each}}
    </div>   
    
  </div>
</main>