<main class='ps-5 pt-2'>


   <div class="breadcrumb pt-2">
        <div class='nav'>            
            {{#each breadcrumb}} 
            <div class="breadcrumb-item">      
                <div class='nav-item' style='margin-top: -7px;'>             
                    {{#unless url }}
                        <a href='{{url}}' class='nav-link disabled'>{{name}}</a>
                    {{else}}
                        <a href='{{url}}' class='nav-link'>{{name}}</a>
                    {{/unless}}             
                </div>
            </div>          
            {{/each}}            
        </div>
    </div> 

   

    <div class="row mb-5">
        {{#with productData}}
            <div class="col-6">
                <div class='card mb-4' >                
                    <img class='card-img-top'
                    src='{{img}}'
                    alt='Product photo {{title}}'/>
                </div>
                <div class='card mt-3 mb-2'>
                    <div class="card-body m-0 p-0">
                        {{#with info}}
                        <div class="p-2 mt-0"> 
                            <h5 class="card-title">
                            {{title}}
                            </h5>
                            <p class="card-text">{{about}}</p>
                            <h3>
                            {{price}}
                            </h3>
                            <br>
                        </div>
                            <div class="mb-4 mt-0">
                            {{#each category}}
                                {{#if isHot}}
                                    <span
                                        class='badge text-bg-warning rounded-pill ms-2'
                                    >
                                        {{name}}
                                    </span>
                                    {{/if}}
                                    {{#if isNew}}
                                    <span
                                        class='badge text-bg-primary rounded-pill ms-2'
                                    >
                                        {{name}}
                                    </span>
                                    {{/if}}
                                    {{#if isBonus}}
                                    <span
                                        class='badge text-bg-info rounded-pill ms-2'
                                    >
                                        {{name}}
                                    </span>
                                    {{/if}}
                            {{/each}}
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>

            <div class="col-1"></div>

            <div class=" col-5 "> 

                {{#with item}}
                    <table class="table " border="1px">
                        <thead>
                            <tr>
                                {{#each head}}
                                <th>{{this}}</th>
                                {{/each}}
                            </tr>
                        </thead>

                        <tbody>                             
                            {{#each body}}
                            <tr>  
                                {{#each this}} 
                                    {{#if @first}}               
                                        <td><b>{{this}}</b></td>
                                        {{else}}
                                        <td>{{this}}</td>
                                    {{/if}}
                                {{/each}} 
                            </tr>                     
                            {{/each}}                    
                        </tbody>
                    </table>
                {{/with}}

                <div>
                    {{#with param}}
                    <div class="card">
                    <ul class="list-group">
                        <div class="card-header">{{title}}</div>
                        {{#each list}}
                        <li class="list-group-item">{{this}}</li>
                        {{/each}}
                    </ul>
                    </div>
                    {{/with}}
                </div> 

                <div class="pt-1 mt=0">
                    {{#with alert}}
                    <div class='alert alert-danger'>
                        {{#if isError}}
                            <span class='f_word'>
                                {{text}}                            
                            </span>
                        {{/if}}
                    </div>
                    {{/with}}
                </div>         
            </div>    
            
            <div class="ms-1 mt-2">
                <div class="card">
                    <div class="card-body">
                    {{#each actionList}}
                        {{#if isWarning}}
                        <button class="btn btn-warning me-3">{{name}}</button>
                        {{/if}}
                        {{#if isError}}
                        <button class="btn btn-outline-danger me-3">{{name}}</button>
                        {{/if}}
                        {{#if isSuccess}}
                        <button class="btn btn-success me-3">{{name}}</button>
                        {{/if}}
                        {{#if isGood}}
                        <button class="btn btn-outline-success me-3">{{name}}</button>
                        {{/if}}
                    {{/each}}
                    </div>
                </div>
            </div>

        {{/with}}
    </div>

    <div>
        {{#with goodsOtherBlock}}        
            <div class='row g-2'>
               {{> shopcard}}
            </div>
        {{/with}}
    </div>

    {{> shopaction}}    
    
  </div>
</main>