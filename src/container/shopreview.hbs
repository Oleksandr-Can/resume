<main class='ps-5'>

  {{! *****formBlock***** }}

  {{#with formBlock}}
    <div class='row'>
      <div class='pt-5 col-8'>
        {{! *****header***** }}
        <div>
          <h1>{{header}}</h1>
          {{#with rating}}
            <div class='mt-4'>{{title}}: {{value}}</div>
          {{/with}}
        </div>

        {{! *****actionBlock***** }}
        <div class='pt-5'>

          {{#with actionBlock}}
            <ul class='nav nav-tabs'>
              {{#each tabs}}
                {{#with this}}
                  {{#if isActive}}
                    <li class='nav-item px-3'>
                      <a class='nav-link active px-5' href='#'><b>{{text}}</b></a>
                    </li>
                  {{else}} 
                    <li class='nav-item px-4'>
                      <a class='nav-link px-5' href='#'>{{text}}</a>
                    </li>
                  {{/if}}
                {{/with}}
              {{/each}}
            </ul>

            <div class='py-5'><hr style='border-width: 2px;' /></div>

            {{! *****report***** }}
            <div class='card'>
              {{#with report}}
                <div class='ms-3'>
                  <div class='my-3'>{{title}}</div>
                  {{#with button}}
                    <div class='my-3'>
                      <a href='{{link}}' class='btn btn-secondary'>{{text}}</a>
                    </div>
                  {{/with}}
                </div>
              {{/with}}
            </div>

          {{/with}}
        </div>
        <div class='py-5'><hr style='border-width: 2px;' /></div>

        {{! *****feedbackBlock***** }}

        <div>
          {{#with feedbackBlock}}
            <div><h2>{{title}}</h2></div>
            {{! *****buttons***** }}
            <div class='my-5'>
              {{#each buttons}}
                {{#with this}}
                  {{#if isWarning}}
                    <a
                      href='{{link}}'
                      class='btn btn-warning text-white me-3'
                    >{{text}}</a>
                  {{/if}}
                  {{#if isSuccess}}
                    <a href='{{link}}' class='btn btn-success me-3'>{{text}}</a>
                  {{/if}}
                  {{#if isDanger}}
                    <a href='{{link}}' class='btn btn-danger'>{{text}}</a>
                  {{/if}}
                {{/with}}

              {{/each}}
            </div>
          {{/with}}
        </div>
      </div>

      {{! *****asidemenu***** }}
      <div class='py-5 col-4'>
        {{#with goodsInfo}}
          {{! *****cardphoto***** }}
          <div class='card'>
            <div class='p-3'>
              <img src='{{photo}}' class='float-start' />
            </div>
            <div class='p-3'><h4>{{name}}</h4></div>
            <br />
          </div>

          {{! *****cardbutton***** }}
          <div class='card my-3 p-3'>
            <div><h4>{{price}}</h4></div>
            {{#if inMarket}}
              <div class='my-2'>Є в наявності</div>
            {{/if}}
            {{#each buttons}}
              {{#with this}}
                <div class='my-1'>
                  {{#if isPrimary}}
                    <a href='{{link}}' class='btn btn-primary'>{{text}}</a>
                  {{/if}}
                </div>

                <div>
                  {{#if isSecondary}}
                    <a href='{{link}}' class='btn btn-secondary'>{{text}}</a>
                  {{/if}}
                </div>
              {{/with}}
            {{/each}}
          </div>
          {{! *****seller***** }}
          <div class='card my-3 p-3'>
            {{#with seller}}
              <div>{{title}}: <b>{{value}}</b></div>
            {{/with}}
          </div>

        {{/with}}
      </div>

    </div>
  {{/with}}

  <div class='pb-5'><hr style='border-width: 2px;' /></div>

    {{!-- *****reviewList***** --}}
    {{> reviewItem}}
  

   {{> shopaction}}

</main>