{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>  
    {{#with main}}     
        <main>
            <section>
                {{>title data="Work history" big=true}}
                <div>
                    <p>
                        <ul>
                            {{#each works}}
                                <li>
                                    <div>{{position}}</div> 

                                    <br>

                                    <div>
                                        {{duration.from}} - 
                                        {{#if duration.to}}
                                            {{duration.to}}
                                        {{else}}
                                            (keep working)
                                        {{/if}}
                                    </div>

                                    <br>
                                    {{#if url}}
                                        <div>{{> link text=company.name href=company.url blank=true noLine=true}}</div>
                                    {{else}}
                                        <b>{{company.name}}</b>
                                    {{/if}}
                                    <br>
                                    <br>

                                    <div>
                                        <strong>Project ({{projectAmount}})</strong>
                                    </div>

                                    <br>

                                    <ul>
                                        {{#each project}}
                                        <li>
                                            {{#if url}}
                                                <div>{{> link text=name href=url blank=true noLine=true}}</div>
                                            {{else}}
                                                <b>{{name}}</b>
                                            {{/if}}
                                            <br>
                                            <div>
                                            <p>{{about}}</p>
                                            </div>
                                            <br>
                                            <div>                                    
                                            <em>Project stacks ({{stackAmount}})</em>
                                            </div>
                                            <br>
                                            <div>                                                                                    
                                            {{#each stacks}}
                                                <div>{{name}}</div>
                                            {{/each}}
                                            </div>
                                            <br>
                                            <div>                                    
                                            <em>Project awards ({{awardAmount}})</em>
                                            </div>
                                            <br>
                                            <div>
                                                {{#each awards}}
                                                    <div>{{name}}</div>
                                                {{/each}}
                                            </div>


                                        </li>
                                        {{/each}}
                                    </ul>
                                </li>
                                <br>
                            {{/each}}
                        </ul>
                    </p>
                </div>
            </section>

            
        </main> 
    {{/with}} 

</div>

