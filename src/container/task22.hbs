<main>
  {{#with page_header}}
    <h1 class='text-center'>{{title}}</h1>
    <br />
    <p
      class='text-center text-uppercase'
    >{{description}}</p>
  {{/with}}
  <br />
  <div class='card'>
    <div class='card-body'>
      {{#with section}}
        {{#with about_us}}
          {{#with title_list}}
            <div class='display-6 text-end'>{{main}}</div>
            <br />
            <h2 class='text-end'>{{sub}}</h2>
          {{/with}}
          <br />
          <button
            class='btn btn-outline-info'
          >{{button.text}}</button>
        {{/with}}
        <br />
        <br />
        <div class='card'>
          <div class='card-body'>
            {{#with advantage}}
              <div class='display-5'>{{title}}</div>
              <br />
              <div class='card'>
                <div class='card-body'>
                  {{#with efficiency}}
                    <div class='display-4'>{{title}}</div>
                    <br />
                    <h4>{{sub_title}}</h4>
                    <br />
                    <p>{{description}}</p>
                    <br />
                    <button
                      class='btn btn-outline-warning'
                    >{{button}}</button>
                  {{/with}}
                </div>
              </div>
              <br />
              <div class='card'>
                <div class='card-body'>
                  {{#with innovation}}
                    <div
                      class='display-4 text-center'
                    >{{title}}</div>
                    <br />
                    <h4
                      class='text-center'
                    >{{sub_title}}</h4>
                    <br />
                    <p
                      class='text-center'
                    >{{description}}</p>
                    <br />
                    <button
                      class='btn btn-outline-warning'
                    >{{button}}</button>
                  {{/with}}
                </div>
              </div>
              <br />
              <div class='card'>
                <div class='card-body'>
                  {{#with collaboration}}
                    <div
                      class='display-4 text-end'
                    >{{title}}</div>
                    <br />
                    <h4 class='text-end'>{{sub_title}}</h4>
                    <br />
                    <p class='text-end'>{{description}}</p>
                    <br />
                    <button
                      class='btn btn-outline-warning'
                    >{{button}}</button>
                  {{/with}}
                </div>
              </div>
            {{/with}}
            <br />
            <div class='card'>
              <div class='card-body'>
                {{#with agreement}}
                  <div class='display-5'>{{title}}</div>
                  <br />
                  {{#with info}}
                    <h5>{{sub_title}}</h5>
                    <br />
                    {{#with detail}}
                      <p>{{text}}</p>
                      <br />
                      <button
                        class='btn btn-success'
                      >{{button}}</button>
                    {{/with}}
                  {{/with}}
                {{/with}}
              </div>
            </div>
          </div>
        </div>
      {{/with}}
    </div>
  </div>
</main>