{{#each cards}}
  <div class='col-3'>
    <div class='card text-bg-dark'>
      <div class='card-body'>
        <div class='card-title'>
          {{title}}
          {{#if isTop}}
            <span
              class='badge text-bg-danger rounded-pill ms-2'
            >
              TOP
            </span>
          {{/if}}

          {{> isidnew}}
        
        </div>
        <p>{{description}}</p>
      </div>
    </div>
  </div>
{{/each}}