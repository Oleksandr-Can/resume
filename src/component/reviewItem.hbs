<div>
    {{#each reviewList}}
    <div class='card p-3 mb-3'>
      <div class='card p-3'>
        {{#with title}}
          <div><h5>{{userName}}</h5></div>
          <div>{{caption}}</div>
          <div class='mt-3'>{{date}}</div>
        {{/with}}
        <div class='ms-0 ps-0'><hr /></div>
        {{#with reviewBody}}
          <div class='mb-2'>
            {{#with seller}}
              <div>{{title}}: {{value}}</div>
            {{/with}}
          </div>
          <div class='my-3'>
            {{#with rating}}
              <div>{{title}}: {{value}}</div>
            {{/with}}
          </div>
          <div>
            {{#each text}}
              <p class='my-2'>{{this}}</p>
            {{/each}}
          </div>
          <div class='my-2'>
            {{#with advantages}}
              <div><b>{{title}}:</b></div>
              <div>{{text}}</div>
            {{/with}}
          </div>
            {{#with disadvantages}}
                <div><b>{{title}}:</b></div>
                <div>{{text}}</div>
            {{/with}}
          <div class='my-2'>
            {{#each images}}
              <img src='{{this}}' class='img pe-2' />
            {{/each}}
          </div>
      </div>
        {{!-- *****block shear***** --}}
            <div class="row">
                <div class="col-1"></div>
                <div class='col-11'>
                    {{#each coments}}
                        <div class='card my-3 ps-2'>
                        {{#with this}}
                            <div class="py-2"><h4>{{userName}}</h4></div>
                            <div>{{date}}</div>
                            <div class="py-2">{{text}}</div>
                        {{/with}}
                        </div>
                    {{/each}}
                </div>
            </div>
        {{/with}}      
    </div>
  {{/each}}
</div>